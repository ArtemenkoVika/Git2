<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appblue_color"
    tools:context="com.example.vv.vkreader.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appblue_color"
        android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/frm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/appblue_color"
        android:minWidth="700dp"></FrameLayout>

        <fragment
            android:id="@+id/details_frag"
            class="com.example.vv.vkreader.Fragments.TextFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_text"></fragment>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
